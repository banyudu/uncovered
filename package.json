  "keywords": [
    "pnpm",
    "typescript",
    "cli",
    "starter"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "banyudu <banyudu@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/find-root": "^1.1.4",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.8",
    "@types/yargs": "^17.0.32",
    "eslint": "9.x",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tsx": "^4.15.7",
    "typescript": "*",
    "typescript-eslint": "^7.13.1"
  },
  "dependencies": {
    "console-table-printer": "^2.12.1",
    "find-root": "^1.1.0",
