{
  "name": "uncovered",
  "version": "0.0.2",
  "description": "List sorted uncovered files in a project",
  "type": "module",
  "types": "lib/index.d.ts",
  "bin": "src/cli.ts",
  "exports": "./src/index.ts",
  "scripts": {
    "start": "tsx src/cli.ts",
    "dev": "tsx --watch src/cli.ts",
    "prepublishOnly": "npm run build",
